<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="40dp"
        android:background="@drawable/bg_info">

        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/main2bold"
            android:text="독서등급"
            android:textColor="@color/black"
            android:textSize="24sp"
            />

        <TextView
            android:id="@+id/tv_bronze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_grade"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/main2bold"
            android:text="Bronze"
            android:textColor="#9E6613"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_silver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bronze"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/main2bold"
            android:text="Silver"
            android:textColor="#ACABAB"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_silver"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/main2bold"
            android:text="Gold"
            android:textColor="#F4E23C"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_platinum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_gold"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/main2bold"
            android:text="Platinum"
            android:textColor="#13BCAC"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_platinum"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/main2bold"
            android:text="Diamond"
            android:textColor="#53B5E1"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_bronze"
            android:layout_alignEnd="@id/tv_diamond2"
            android:layout_toRightOf="@id/tv_bronze"
            android:fontFamily="@font/main2bold"
            android:gravity="right"
            android:text="독서 Lv      1-3"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_silver"
            android:layout_alignEnd="@id/tv_diamond2"
            android:layout_toRightOf="@id/tv_silver"
            android:fontFamily="@font/main2bold"
            android:gravity="right"
            android:text="독서 Lv    4-10"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_gold"
            android:layout_alignEnd="@id/tv_diamond2"
            android:layout_toRightOf="@id/tv_gold"
            android:fontFamily="@font/main2bold"
            android:gravity="right"
            android:text="독서 Lv   11-16"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_platinum"
            android:layout_alignEnd="@id/tv_diamond2"
            android:layout_toRightOf="@id/tv_platinum"
            android:fontFamily="@font/main2bold"
            android:gravity="right"
            android:text="독서 Lv  17-25"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_diamond2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_diamond"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="35dp"
            android:layout_toRightOf="@id/tv_diamond"
            android:fontFamily="@font/main2bold"
            android:text="독서 Lv 25이상"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>