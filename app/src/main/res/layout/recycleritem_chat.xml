<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="#EAF7FF"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="6dp"
        android:text="zxc님의 게시글입니다" />

    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_below="@id/id"
        android:scaleType="fitXY"
        android:src="#BED4DD"
        android:paddingRight="2dp"
        android:paddingLeft="2dp"/>

    <ImageView
        android:id="@+id/btn_ht"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/icon_favorite"
        android:layout_marginLeft="6dp"
        android:layout_below="@+id/tv_chat" />
    <ImageView
        android:id="@+id/btn_chat"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/icon_chat"
        android:layout_below="@+id/tv_chat"
        android:layout_toRightOf="@id/btn_ht"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_chat"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:padding="4dp"
        android:maxLines="3"
        android:text="안녕안녕안안녕안녕안안녕안녕녕녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕안녕"/>
</RelativeLayout>