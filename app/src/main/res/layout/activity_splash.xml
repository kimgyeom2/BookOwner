<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.SplashActivity"
    android:background="#EAF7FF">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:adjustViewBounds="true"
        android:src="@drawable/book" />
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/app_name"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="256dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/app_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub_name"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="304dp"
        android:fontFamily="@font/app_name2"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sub_name2"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="324dp"
        android:fontFamily="@font/app_name2"
        android:textStyle="bold"/>
</RelativeLayout>